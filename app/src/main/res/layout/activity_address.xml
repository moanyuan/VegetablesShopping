<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:background="@color/back_green">

        <ImageView
            android:id="@+id/iv_address_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/tb_37"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_address_back"
            android:layout_marginLeft="5dp"
            android:textColor="@color/black"
            android:text="管理收货地址"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lv_add_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@null"
            android:fadingEdge="none"
            android:scrollbars="none"
            android:listSelector="@android:color/transparent"
            android:scrollbarStyle="outsideOverlay" />

    </LinearLayout>

    <Button
        android:id="@+id/bt_add_address"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="20sp"
        android:background="@color/btn_gray"
        android:textColor="@color/white"
        android:text="+增加收货地址"/>

</LinearLayout>
